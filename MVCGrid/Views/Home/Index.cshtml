@using MVCGrid.Models
@Model Student
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<h1></h1>
<h3>Welcome to My first MVC Home page</h3>
<form action="~/Home/Index" method="post">
    Enter Your name here:<input type="text" name="txtName" id="" /><br />
    <input type="submit" value="GetName" />
    <br />

    @{
        if (IsPost)
        {
            string x = Request["txtName"];
            <label id="lblName">Welcome Mr./Ms. @x</label>
        }
    }
</form>
<form>
    <h2>Student Details</h2>
    <table>
        <tr>
            <td>
                Name
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>Class</td>
            <td>@Model.Class</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>@Model.Gender</td>
        </tr>
    </table>
</form>